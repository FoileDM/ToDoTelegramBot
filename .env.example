# DB
POSTGRES_DB=todo
POSTGRES_USER=todo
POSTGRES_PASSWORD=todo
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# DJANGO
DJANGO_SECRET_KEY=insecure-key
DEBUG=1
ALLOWED_HOSTS=*
# Префикс для генерации ключа
PK_PREFIX=ABC

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=America/Adak
CELERY_ENABLE_UTC=1

# BOT (Aiogram)
BOT_TOKEN=0000000000:AAAAAAAAAAAAAAAAAA
BACKEND_BASE_URL=http://web:8000/api
# HTTP-клиент бота
HTTP_TIMEOUT=10.0
HTTP_RETRIES=3
# Health-сервер бота — для docker healthcheck.
HEALTH_PORT=8080

# S2S JWT валидация
BOT_JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
insert-public-key
-----END PUBLIC KEY-----"
BOT_JWT_ISS=todo-bot
BOT_JWT_AUD=todo-backend
BOT_JWT_SCOPE=bot:act_as_user
BOT_JWT_ALG=RS256
BOT_JWT_LEEWAY=45
BOT_JWT_TTL=120
BOT_JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
insert-private-key
-----END PRIVATE KEY-----"